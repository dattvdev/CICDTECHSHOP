			if (isDuplicate) {
				// Show an error message for the duplicate entry
				$('#NameError').text('Specification name already exists.').addClass('text-danger');
			} else {
				// Clear any previous error messages
				$('#NameError').text('');
				if (form.valid()) {
					var url = form.attr('action');
					var data = form.serialize();

					$.ajax({
						type: 'POST',
