@{
    var filters = ViewBag.Filters as List<TechShop.Core.Models.Filter>;
    var selectedFilterIds = ViewBag.SelectedFilterIds as List<Guid?>;
}

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card">
            <div class="card-title p-2">
                <h5 class="mb-0">Content Filter</h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-wrap">
                    @foreach (var filter in filters)
                    {
                        bool isSelected = selectedFilterIds.Contains(filter.Id);

                        <button id="@filter.Id" onclick="updateFilter('@filter.Id')" class="btn filter-item m-2 @(isSelected ? "selected" : "")">
                            @filter.Name
                            <i class="fas @(isSelected ? "fa-check" : "fa-plus") default-icon"></i>
                            <i class="fas fa-times remove-icon"></i>
                        </button>
                    }
                </div>
                <div class="mt-3 text-right">
                    <button id="saveFilters" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

