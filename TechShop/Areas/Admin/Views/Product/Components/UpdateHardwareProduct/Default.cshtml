@{
    var productHardwares = ViewBag.ProductHardwares as List<TechShop.Core.Models.ProductHardware>;
}


<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card">
            <div class="card-title p-2 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Product Hardware</h5>
                <button class="btn btn-primary" id="addHardwareProduct" data-toggle="modal" data-target="#contentHardwareProductModal">Add hardware product</button>
            </div>
            <div class="card-body">
                <div class="d-flex flex-wrap" id="containerProductHardware">
                    @foreach(var hardwares in productHardwares)
                    {
                        <button type="button" data-id="@hardwares.Id" class="btn btn-primary me-2 mb-2 btn-hardwareProduct">
                            @hardwares.Name
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="contentHardwareProductModal" tabindex="-1" role="dialog" aria-labelledby="contentHardwareProductLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contentHardwareProductLabel">Add Hardware Product</h5>
                <button type="button" class="close closeHardwareProduct" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formHardware">
                    
                </form>
                <button type="button" class="btn btn-primary btn-block" id="addProductHardwareBtn">
                    Add Product Hardware
                </button>
            </div>
            <div class="modal-footer">
                <button id="closeContentHardware" type="button" class="btn btn-secondary closeHardwareProduct" data-dismiss="modal">Close</button>
                <button id="saveContentHardware" type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
