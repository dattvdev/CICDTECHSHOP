@{
    var slideImages = ViewBag.SlideImages as List<TechShop.Core.Models.ProductImage>;
}

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card">
            <div class="card-title p-2 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Slide Images</h5>
                <button class="btn btn-primary btn-sm" id="addSlideImage">Add Image</button>
            </div>
            <div class="card-body">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner" id="slideContainer">
                        @for (int i = 0; i < slideImages.Count(); i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="position-relative">
                                    <img src="@slideImages[i].UrlImage" alt="@slideImages[i].Alt" title="@slideImages[i].Title" class="d-block w-100" style="object-fit: cover;">
                                    <button type="button" class="btn-close position-absolute top-0 end-0 m-2 removeSlideImage" style="z-index: 100" aria-label="Close" data-id="@slideImages[i].Id" data-bs-toggle="modal" data-bs-target="#deleteSlideImageModal"></button>
                                </div>
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteSlideImageModal" tabindex="-1" aria-labelledby="deleteSlideImageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteSlideImageModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this slide image?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteSlideImage">Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="contentSlideModal" tabindex="-1" role="dialog" aria-labelledby="contentSlideModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contentSlideModalLabel">Add Slide</h5>
            </div>
            <div class="modal-body">
                <form id="formContentSlide">
                    <div class="form-group">
                        <label for="slideImageInput">Select Slide Image</label>
                        <input type="file" class="form-control-file" id="slideImageInput" name="slideImageInput" accept="image/*" multiple>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="closeContentSlide" type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button id="saveContentSlide" type="button" class="btn btn-primary">Save Slide</button>
            </div>
        </div>
    </div>
</div>
