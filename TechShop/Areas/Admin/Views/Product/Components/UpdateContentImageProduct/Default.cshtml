@{
    var contentImages = ViewBag.ContentImages as List<TechShop.Core.Models.ProductImage>;
}

 @for (int i = 0; i < contentImages.Count(); i++)
                {
                    <div class="card-body d-flex align-items-center p-2" data-id-content="@contentImages[i].Id">
                        <span class="image-label">Image @(i+1):</span>
                        <div class="link-container">
                            <a href="@contentImages[i].UrlImage" target="_blank" class="scrollable-link">@contentImages[i].UrlImage</a>
                        </div>
                        <span data-url="@contentImages[i].UrlImage"
                              data-alt="@contentImages[i].Alt"
                              data-title="@contentImages[i].Title"
                              style="cursor: pointer"
                              class="copy-icon text-right">
                            <i class="fas fa-copy"></i>
                        </span>
                        <span data-id="@contentImages[i].Id" style="cursor: pointer"
                              class="remove-icon text-right">
                            <i class="fas fa-times"></i>
                        </span>
                    </div>
                }
  

