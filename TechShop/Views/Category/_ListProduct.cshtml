@model IEnumerable<TechShop.Core.Models.Product>


@if (Model != null && Model.Any())
{
	<div class="product-carousel row" style="width:100%;">
		@foreach (var product in Model)
		{
			<div class="col-md-4">
					<a class="product" style="width:25%" asp-controller="Product" asp-action="Detail" asp-route-id="@product.UrlSlug">
					<!-- Product Image -->
					<div class="product-img">
						<div style="width: 100%; height: 250px">
							<img src="@product.Image" alt="@product.Name" onerror="this.onerror=null;this.src='/lib/electro-template/img/product01.png';"
								 style="object-fit: contain; width: 100%; height: 100%;">
						</div>
						<div class="product-label">
							@if (product.Discount > 0)
							{
								<span class="sale">-@product.Discount%</span>
							}
							<span class="new">NEW</span> <!-- Add logic for new if necessary -->
						</div>
					</div>

					<!-- Product Body -->
					<div class="product-body">
						<p class="product-category">@product.Category.Name</p> <!-- You can update this if you have category info -->
						<h3 class="product-name">@product.Name</h3>

						<div class="product-rating">
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i> <!-- Placeholder rating, adjust if needed -->
						</div>

						<!-- Product Buttons -->
						<div class="product-btns">
							<button class="add-to-wishlist">
								<i class="fa fa-heart-o"></i>
								<span class="tooltipp">add to wishlist</span>
							</button>
							<button class="add-to-compare">
								<i class="fa fa-exchange"></i>
								<span class="tooltipp">add to compare</span>
							</button>
							<button class="quick-view">
								<i class="fa fa-eye"></i>
								<span class="tooltipp">quick view</span>
							</button>
						</div>
					</div>
				</a>
			</div>
		}
	</div>
}
else
{
	<p>No products available.</p>
}