@model IEnumerable<TechShop.Core.Models.ProductWithMinPrice>

@if (Model != null && Model.Any())
{
	<div class="product-carousel" style="width:100%">
		@foreach (var product in Model)
		{
			<div style="display:flex;gap:18px;">

				<a class="product-custom" style="width:94%" asp-controller="Product" asp-action="Detail" asp-route-id="@product.UrlSlug">
				<!-- Product Image -->
				<div class="product-img">
					<img src="@product.Image" alt="@product.Name" onerror="this.onerror=null;this.src='/lib/electro-template/img/product01.png';">
					<div class="product-label">
						@* @if (product.Discount > 0)
						{
							<span class="sale">-@product.Discount%</span>
						} *@
						<span class="new">NEW</span>
					</div>
				</div>

				<!-- Product Body -->
				<div class="product-body">
					<p class="product-category">@product.CateName</p> <!-- You can update this if you have category info -->
					<h3 class="product-name">@product.Name</h3>
					<h4 class="product-price">
						$@product.MinPrice
						@if (product.Discount > 0)
						{
							<del class="product-old-price">
								@* $@(Math.Round((product.MinPrice / (1 - (product.Discount / 100.0))), 2)) *@
							</del>
						}
					</h4>

					@* <div class="product-rating">
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
					</div> *@

					<!-- Product Buttons -->
					@* <div class="product-btns">
						<button class="add-to-wishlist">
							<i class="fa fa-heart-o"></i>
							<span class="tooltipp">add to wishlist</span>
						</button>
						<button class="add-to-compare">
							<i class="fa fa-exchange"></i>
							<span class="tooltipp">add to compare</span>
						</button>
						<button class="quick-view">
							<i class="fa fa-eye"></i>
							<span class="tooltipp">quick view</span>
						</button>
					</div> *@
				</div>
			</a>
			</div>

		}
	</div>
}
else
{
	<p>No products available.</p>
}


